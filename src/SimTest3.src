;SimTest3
;Programm zum Test des 16F84-Simulators.
;Es wird der Timer0 mit und ohne Vorteiler geprüft
;(c) St. Lehmann   Ersterstellung: 23.01.2003
;19.04.2014 überarbeitet 

         list c=132          ;Zeilenlänge im LST auf 132 Zeichen setzen

;Definition einiger Symbole
indirect equ 0
status   equ 03h
fsr      equ 04h
ra       equ 05h
rb       equ 06h
count    equ 0ch

;Definition des Prozessors
         device 16F84
;Festlegen des Codebeginns
         org 0
start
;zuerst Timer0 intern durch den Befehlstakt erhöhen VT = 1:4
;somit wird nach jedem 4. Befehlstakt (Achtung GOTO etc) TMR0 erhöht
         movlw 00000001B     ;Option-Register entsp. initialisieren
         bsf status,5        ;Bank umschalten
         movwf 1             ;Option-Register
         bcf status,5
         movlw 1             ;Timer 1 auf 1
         movwf 1
         clrf 10h            ;zähler
loop1
         nop
         nop
         nop
         incf 10h
         movf 1,w            ;lese Timerwert aus
         btfss status,2      ;wenn Timer = 0, dann fertig
         goto loop1
;num muss 80H in 10h stehen

;nun mit einem VT = 1:16         
;somit wird nach jedem 16. Befehlstakt (Achtung GOTO etc) TMR0 erhöht
         movlw 00000011B     ;Option-Register entsp. initialisieren
         bsf status,5        ;Bank umschalten
         movwf 1             ;Option-Register
         bcf status,5
         movlw 1             ;Timer 1 auf 1
         movwf 1
         clrf 10h            ;zähler
loop2
         incf 10h
         movf 1,w            ;lese Timerwert aus
         btfss status,2      ;wenn Timer = 0, dann fertig
         goto loop2
;num muss 31H in 10h stehen
;*****************************************************************
;jetzt wird der Timer0 durch den externen Takt an RA4 hochgezählt.
;zuerst ohne VT, damit zählt jede fallende Flanke an RA
         movlw 00111000B     ;Option-Register initialisieren
         bsf status,5
         movwf 1             ;Wert ins Option-Register
         bcf status,5
         clrf 1              ;Timer löschen
loop3
         btfss 1,4           ;bis im Timer0 der Wert 16 erreicht wird
         goto loop3

;jetzt auch mit VT 1:4, damit zählt jede 4. fallende Flanke an RA
         movlw 00110001B     ;Option-Register initialisieren
         bsf status,5
         movwf 1             ;Wert ins Option-Register
         bcf status,5
         clrf 1              ;Timer löschen
loop4
         btfss 1,3           ;bis im Timer0 der Wert 8 erreicht wird
         goto loop4
                  
;******************************************************************

ende
         goto ende           ;Endlosschleife, verhindert Nirwana

                  